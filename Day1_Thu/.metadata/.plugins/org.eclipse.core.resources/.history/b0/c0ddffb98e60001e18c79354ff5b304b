    background-color: white; /* Color of the underline */
    transition: width 0.3s ease; /* Add a transition for width */
}

.menu a:hover {
    color: white; /* Change text color on hover */
   
}

.menu a:hover::before {
    width: 80%; /* Expand the width of the underline on hover */
}



